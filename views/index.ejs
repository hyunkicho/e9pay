              <div class="col-lg-12">
                <div class="small-box bg-info">
                  <button type="button" class="btn btn-block btn-primary btn-lg buttonyellow" onClick="location.href='./chargeKPAY'">
                    <span>Charge KRpay</span>
                    <i class="fa fa-arrow-right fa-x"></i>
                  </button>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="small-box bg-info">
                  <button type="button" class="btn btn-block btn-primary btn-lg buttonyellow" onClick="location.href='./chargeUZPAY'">
                    <span>Charge UZpay</span>
                    <i class="fa fa-arrow-right fa-x"></i>
                  </button>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="small-box bg-info">
                  <button type="button" class="btn btn-block btn-primary btn-lg buttonyellow" onClick="location.href='./sendKPAY'">
                    <span>Send KRpay</span>
                    <i class="fa fa-arrow-right fa-x"></i>
                  </button>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="small-box bg-info">
                  <button type="button" class="btn btn-block btn-primary btn-lg buttonyellow" onClick="location.href='./sendUZPAY'">
                    <span>Send UZpay</span>
                    <i class="fa fa-arrow-right fa-x"></i>
                  </button>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="small-box bg-info">
                  <button type="button" class="btn btn-block btn-primary btn-lg buttonyellow" onClick="location.href='./shop'">
                    <span>Alopay Shop</span>
                    <i class="fa fa-arrow-right fa-x"></i>
                  </button>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="small-box bg-info">
                  <button type="button" class="btn btn-block btn-primary btn-lg buttonyellow" onClick="location.href='./Withdraw'">
                    <span>Cash Withdrawal</span>
                    <i class="fa fa-arrow-right fa-x"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <br>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark"></aside>
    <!-- /.control-sidebar -->
  </div>
