      <section class="content">
        <div class="container-fluid">
          <!-- Small boxes (Stat box) -->
          <div class="row">
            <div class="whitebigbox">
              <div class="col-lg-12" id="KPAY_box">
                <!-- small box -->
                  <p>MY KRpay</p>
                    <div class="small-box bg-info">
